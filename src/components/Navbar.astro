---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggleWithTooltip from "./DarkModeToggleWithTooltip.tsx";
import SocialLinksWithTooltip from "./SocialLinksWithTooltip.tsx";

const isDevelopment = import.meta.env.DEV;
---

<header
  class="sticky top-0 z-50 bg-background/30 backdrop-blur-md"
  role="banner"
>
  <nav
    class="max-w-2xl mx-auto px-6 py-4"
    role="navigation"
    aria-label="Main navigation"
  >
    <div class="flex items-center justify-between">
      <div class="text-xl font-bold text-foreground">
        <a
          href="/"
          class="hover:text-muted-foreground transition-colors tracking-tighter"
          data-astro-prefetch="hover">{SITE_TITLE}</a
        >
      </div>

      <div
        class="hidden md:flex items-center space-x-8 lowercase font-semibold"
      >
        <HeaderLink href="/posts">Posts</HeaderLink>
        {isDevelopment && <HeaderLink href="/create">Create</HeaderLink>}
      </div>

      <div class="flex items-center gap-4">
        <DarkModeToggleWithTooltip client:load />
        <SocialLinksWithTooltip variant="navbar" client:load />
      </div>
    </div>
  </nav>
</header>
