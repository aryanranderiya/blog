---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header
  class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-zinc-200/50"
>
  <nav class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-bold text-zinc-900">
        <a href="/" class="hover:text-zinc-700 transition-colors"
          >{SITE_TITLE}</a
        >
      </h2>

      <div class="hidden md:flex items-center space-x-8">
        <HeaderLink
          href="/posts"
          class="text-zinc-600 hover:text-zinc-900 transition-colors font-medium"
          >Posts</HeaderLink
        >
        <HeaderLink
          href="/search"
          class="text-zinc-600 hover:text-zinc-900 transition-colors font-medium"
          >Search</HeaderLink
        >
      </div>

      <div class="flex items-center space-x-4">
        <a
          href="https://aryanranderiya.com"
          target="_blank"
          class="text-zinc-400 hover:text-zinc-600 transition-colors"
        >
          <span class="sr-only">Visit Aryan's website</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" class="w-5 h-5"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm0 14.5C4.42 14.5 1.5 11.58 1.5 8S4.42 1.5 8 1.5s6.5 2.92 6.5 6.5-2.92 6.5-6.5 6.5z M8 2C4.69 2 2 4.69 2 8s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm0 10.5c-2.48 0-4.5-2.02-4.5-4.5S5.52 3.5 8 3.5s4.5 2.02 4.5 4.5-2.02 4.5-4.5 4.5z"
            ></path></svg
          >
        </a>
        <a
          href="https://twitter.com/aryanranderiya"
          target="_blank"
          class="text-zinc-400 hover:text-zinc-600 transition-colors"
        >
          <span class="sr-only">Follow Aryan on Twitter</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" class="w-5 h-5"
            ><path
              fill="currentColor"
              d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
            ></path></svg
          >
        </a>
        <a
          href="https://github.com/aryanranderiya/blog"
          target="_blank"
          class="text-zinc-400 hover:text-zinc-600 transition-colors"
        >
          <span class="sr-only">Go to blog's GitHub repo</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" class="w-5 h-5"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </nav>
</header>
