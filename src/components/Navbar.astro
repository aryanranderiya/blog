---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import { WebIcon, TwitterIcon, GitHubIcon } from "./icons/icons";
import DarkModeToggle from "./DarkModeToggle.astro";

const isDevelopment = import.meta.env.DEV;
---

<header
  class="sticky top-0 z-50 bg-background/30 backdrop-blur-md"
  role="banner"
>
  <nav
    class="max-w-2xl mx-auto px-6 py-4"
    role="navigation"
    aria-label="Main navigation"
  >
    <div class="flex items-center justify-between">
      <div class="text-xl font-bold text-foreground">
        <a
          href="/"
          class="hover:text-muted-foreground transition-colors tracking-tighter"
          data-astro-prefetch="hover">{SITE_TITLE}</a
        >
      </div>

      <div
        class="hidden md:flex items-center space-x-8 lowercase font-semibold"
      >
        <HeaderLink href="/posts">Posts</HeaderLink>
        {isDevelopment && <HeaderLink href="/create">Create</HeaderLink>}
      </div>

      <div class="flex items-center space-x-4">
        <DarkModeToggle />
        <a
          href="https://aryanranderiya.com"
          target="_blank"
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          <span class="sr-only">Visit Aryan's website</span>
          <WebIcon size={20} className="w-5 h-5" />
        </a>
        <a
          href="https://twitter.com/aryanranderiya"
          target="_blank"
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          <span class="sr-only">Follow Aryan on Twitter</span>
          <TwitterIcon size={20} className="w-5 h-5" />
        </a>
        <a
          href="https://github.com/aryanranderiya/blog"
          target="_blank"
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          <span class="sr-only">Go to blog's GitHub repo</span>
          <GitHubIcon size={20} className="w-5 h-5" />
        </a>
      </div>
    </div>
  </nav>
</header>
